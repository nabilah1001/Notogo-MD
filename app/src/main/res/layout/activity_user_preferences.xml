<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentification.UserPreferencesActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:fontFamily="@font/ppbold"
        android:text="@string/texthead"
        android:textAlignment="center"
        android:textColor="@color/blue_1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/ppregular"
        android:text="@string/textsubhead"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/titleTextView"
        app:layout_constraintStart_toStartOf="@+id/titleTextView"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="64dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/getStartedButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descTextView">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBeach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                app:checkedIconEnabled="false"
                app:chipStrokeColor="@color/black"
                app:chipStrokeWidth="1dp"
                app:chipBackgroundColor="@drawable/chip"
                app:chipCornerRadius="10dp"
                app:textStartPadding="15dp"
                app:textEndPadding="15dp"
                android:textColor="@color/black"
                android:textSize="15sp"

                android:text="@string/beach" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMountain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                app:checkedIconEnabled="false"
                app:chipStrokeColor="@color/black"
                app:chipStrokeWidth="1dp"
                app:chipBackgroundColor="@drawable/chip"
                app:chipCornerRadius="10dp"
                app:textStartPadding="15dp"
                app:textEndPadding="15dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="@string/mountain" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipLake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                app:checkedIconEnabled="false"
                app:chipStrokeColor="@color/black"
                app:chipStrokeWidth="1dp"
                app:chipBackgroundColor="@drawable/chip"
                app:chipCornerRadius="10dp"
                app:textStartPadding="15dp"
                app:textEndPadding="15dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="@string/lake" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipZoo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                app:checkedIconEnabled="false"
                app:chipStrokeColor="@color/black"
                app:chipStrokeWidth="1dp"
                app:chipBackgroundColor="@drawable/chip"
                app:chipCornerRadius="10dp"
                app:textStartPadding="15dp"
                app:textEndPadding="15dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="@string/zoo" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipRiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
